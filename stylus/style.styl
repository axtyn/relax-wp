/* +++ COLORES +++ */
$atenea_rojo = #b60050
$relax_azul = #0054A3
$gris = #d1d1d1


/* +++ BLOG +++ */
@import 'home-blog.styl'
@import 'single-blog.styl'




/*Maqueta*/

html, body
	font-size 16px
	width 100%
	height 100%
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	vertical-align baseline

body
	font 13px/21px "Open Sans", Arial, sans-serif
	color #777777
	background-color white
	overflow-x hidden
	font-style normal

a
	color #2a80b9
	text-decoration none !important
	-webkit-transition all 200ms ease-in
	-moz-transition all 200ms ease-in
	-ms-transition all 200ms ease-in
	-o-transition all 200ms ease-in
	transition all 200ms ease-in
  
	&:hover
		color #e84c3d

h1, h2, h3, h4, h5, h6
	font-family "Open Sans", Arial, sans-serif
	color #2a3f52
	font-weight 700
.navbar-fixed-top
	margin-top 40px


.current-menu-item a
	background red


.widget
	margin-top 30px



/*Header*/

.main-header
	margin-top 15px
	margin-bottom 15px
 
	.logo
		h1
			margin 4px 0 0 0
			
			& img
				width 170px
				height auto
		h2
			font-size .6em
			margin -3px 0px 0px 22%


/*Menu Desktop*/
.main-nav
	background-color $relax_azul
	color white
	border-bottom 3px solid $atenea_rojo
	height 60px
	font-size .9rem

	ul
		li
			display inline-block
			line-height 60px
			margin-left 2px
			height 60px
			cursor pointer
			transition: all 0.5s linear; /*No disponible en IE*/
			-webkit-transition: all 0.5s linear;
			-moz-transition: all 0.5s linear;
			-o-transition: all 0.5s linear;
			
		a
			color white
			//text-transform uppercase
			font-weight 700
			padding 15px 6px
			  
			&:hover, &.current
				width 100px
				height 100px
				color #dcecf7
				background $atenea_rojo
				padding 15px 6px
				border-radius 5px
				-webkit-border-radius 5px

/*FOOTER*/
footer
	color black
	font-size 12px

.our-partner
	background-color $atenea_rojo
	text-align center
	position relative
	color white

	& blockquote
		font-size .9rem
		line-height 10px
		margin 10px
	
	& a
		color white
	
	& a:hover
		color #bfddf0
		
.main-footer
	background-color #d1d1d1
	padding 0px 0 0 0
  
	.ul-footer ul
		padding 0
		margin 0
		list-style square
		list-style-position inside
  
	.ul-footer li a
		display inline-block
		line-height 20px
		margin-bottom 10px

.bottom-footer
	background-color black
	border-top 3px solid $relax_azul
	padding 10px 0
	font-size 16px
	color white
	text-align center
	margin 0 auto

	& a
		color white
		font-weight 800
		font-size 1em

	& span
		display block
		margin-bottom 10px
	
	& p
		margin 0 auto
		font-size .8em
